    <Fluent:RibbonGroupBox Header="">
        <Fluent:Button Name="buttonNewOrder" Header="{StaticResource createorder}" Icon="Images\auftragadd.png" LargeIcon="Images\auftragadd.png" Click="buttonNewOrder_Click">
            <Fluent:Button.ToolTip>
                <Fluent:ScreenTip Title="{StaticResource createorder}" HelpLabelVisibility="Collapsed" Width="450" Text="{StaticResource createordertooltip}" />
            </Fluent:Button.ToolTip>
        </Fluent:Button>
        <Fluent:Button Name="buttonEditOrder" Header="{StaticResource editorder}" Icon="Images\auftragedit.png" LargeIcon="Images\auftragedit.png" IsEnabled="False" Click="buttonEditOrder_Click">
            <Fluent:Button.ToolTip>
                <Fluent:ScreenTip Title="{StaticResource editorder}" HelpLabelVisibility="Collapsed" Width="450" Text="{StaticResource editordertooltip}" DisableReason="{StaticResource editordertooltipdisable}" />
            </Fluent:Button.ToolTip>
        </Fluent:Button>
    </Fluent:RibbonGroupBox>
